apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ etcd_cluster_role_binding }}
  labels:
    app: {{ etcd_backup_cronjob }}
subjects:
  - kind: ServiceAccount
    name: {{ etcd_backup_service_account }}
    namespace: {{ etcd_backup_namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: {{ etcd_cluster_role_name }}